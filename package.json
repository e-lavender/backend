{
  "name": "inctagram-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:inctagram-backend": "nest build inctagram-backend",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start inctagram-backend",
    "start:inctagram-backend": "nest start inctagram-backend",
    "start:dev": "nest start --watch",
    "start:debug:inctagram-backend": "nest start inctagram-backend  --debug --watch",
    "start:prod": "node dist/apps/inctagram-backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/inctagram-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "10.2.6",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "7.1.14",
    "@nestjs/throttler": "5.0.1",
    "@prisma/client": "5.5.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "date-fns": "2.30.0",
    "joi": "17.11.0",
    "nodemailer": "6.9.7",
    "pg": "8.11.3",
    "postgres": "3.4.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "prisma": "^5.5.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
